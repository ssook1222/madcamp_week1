<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".diaries.DiaryFragment">

            <TextView
                android:id="@+id/diaryTitleView"
                tools:text="타이틀"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:fontFamily="@font/notosans_bold"
                />

            <TextView
                android:id="@+id/diaryDateView"
                tools:text="2022-01-01"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-40dp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/notosans_regular"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cs_soft_purple"
                >
            </ImageView>

            <ImageView
                android:id="@+id/diaryImageView"
                android:layout_margin="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jy_soft_blue"
                >
            </ImageView>

            <TextView
                android:elevation="10dp"
                android:id="@+id/diaryTextView"
                android:fontFamily="@font/notosans_regular"
                tools:text="안녕하세요"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:textColor="#2C2A2A"
                android:textSize="16dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>